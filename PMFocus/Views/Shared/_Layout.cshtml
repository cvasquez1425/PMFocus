@using PMFocus.Infrastructure
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Project Management</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/themes/base/css")   @*JQuery UI plug-ins or extension*@
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <img src="~/Images/GM_Logo.png" class="float-left"/>
            <div class="content-wrapper">
                <div class="float-right">
                    <section id="login">
                        Welcome, <span class="username">@User.Identity.Name</span>!
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionImage("~/Images/PMFocus_homeIcon.png","Home Logo","","Index","Home",null)</li>
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionImage("~/Images/PMFocus_ReportIcon.jpg","Report Logo","","Index","Home",null)</li>
                            <li>@Html.ActionLink("Report","Report","Home")</li>
                            <li>@Html.ActionImage("~/Images/PMFocus_AdminIcon.jpg","Admin Logo","","Index","Home",null)</li>
                            <li>@Html.ActionLink("Admin","Admin","Home")</li>
                            <li>@Html.ActionImage("~/Images/PMFocus_RunIcon.png","Admin Logo","","Index","Home",null)</li>
                            <li>@Html.ActionLink("Action","Action","Home")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
@*        <div>
            @Html.Action("gridListLog", "Home", new {id=1})
        </div>*@
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/PMFocus")
        @RenderSection("scripts", required: false)
    </body>
</html>
